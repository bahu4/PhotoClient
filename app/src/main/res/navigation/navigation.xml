<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/menu_main">

    <fragment
        android:id="@+id/menu_main"
        android:name="com.example.photoclient.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_menu_main_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_settings"
        android:name="com.example.photoclient.SettingsFragment"
        android:label="activity_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.photoclient.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
</navigation>